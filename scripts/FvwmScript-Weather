WindowTitle {Weather}
WindowSize  90 16
WindowPosition 0 0
Font "xft:Tamzen:pixelsize=15"

Init
 Begin
  Set $Weather = (GetOutput {exec weather.sh} 1 -1)
  ChangeTitle 1 $Weather
 End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 6000)==0 Then
  Begin
   Set $Weather = (GetOutput {exec weather.sh} 1 -1)
   ChangeTitle 1 $Weather
  End
 End

Widget 1
Property
 Position 0 -2
 Size 90 16
 Font "xft:Tamzen:pixelsize=15"
 Type ItemDraw
 Flags NoReliefString Left
 Title {}
 Colorset 5
Main
 Case message of
  SingleClic :
  Begin
  End
End
