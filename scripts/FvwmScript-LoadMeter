WindowTitle {LoadMeter}
WindowSize  250 100
Font "xft:Tamzen:pixelsize=15"

Init
 Begin
  Set $Load = (GetOutput {exec ramcpu.sh cpu} 1 -1)
  ChangeTitle 1 $Load
End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 10)==0 Then
  Begin
   Set $Load = (GetOutput {exec ramcpu.sh cpu} 1 -1)
   ChangeTitle 1 $Load
  End
End

Widget 1
Property
 Position 0 -2
 Size 250 15
 Font "xft:Tamzen:pixelsize=15"
 Type ItemDraw
 Flags NoReliefString NoFocus
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 0 15
 Size 250 50
 Type SwallowExec
 Title {xosview}
 SwallowExec {exec xosview2}
Main
 Case message of
  SingleClic :
  Begin
  End
End
