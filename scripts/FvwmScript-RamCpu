WindowTitle {RamCpu}
WindowSize  75 16
WindowPosition 0 0
Font "xft:Tamzen:pixelsize=15"

Init
 Begin
  Set $Ram = (GetOutput {exec ramcpu.sh ram} 1 -1)
  Set $Cpu = (GetOutput {exec ramcpu.sh cpu} 1 -1)
  ChangeTitle 1 $Ram
  ChangeTitle 2 $Cpu
 End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 60)==0 Then
  Begin
   Set $Ram = (GetOutput {exec ramcpu.sh ram} 1 -1)
   Set $Cpu = (GetOutput {exec ramcpu.sh cpu} 1 -1)
   ChangeTitle 1 $Ram
   ChangeTitle 2 $Cpu
  End
 End

Widget 1
Property
 Position 0 -2
 Size 75 16
 Font "xft:Tamzen:pixelsize=15"
 Type ItemDraw
 Flags NoReliefString Left
 Title {}
 Colorset 10
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 38 -2
 Size 75 16
 Font "xft:Tamzen:pixelsize=15"
 Type ItemDraw
 Flags NoReliefString Left
 Title {}
 Colorset 11
Main
 Case message of
  SingleClic :
  Begin
  End
End
